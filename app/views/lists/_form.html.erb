<%= simple_form_for(subject, remote: true) do |f| %>
  <div class="col-md-6">
    <%= f.input :name %>
  </div>
  <div class="col-md-3">
    <%= f.input :access_type, include_blank: false %>
  </div>

  <div class="col-md-3 bottom-align">
    <%= submit_tag "#{t('lists.mine.create')}", class: "btn btn-primary" %>
    <%= content_tag :button, "#{t('lists.mine.cancel')}", class: "btn btn-default cancel-new-task-list" %>
  </div>
<% end %>
